<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @RenderSection("Meta")

    @Styles.Render("~/Genel/Css")

</head>
<body style="padding-top:50px;">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">İş Takip Uygulaması</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Profili Görüntüle","Profil","Home")</li>
                        <li>@Html.ActionLink("Çıkış Yap", "Cikis", "Giris")</li>
                    </ul>

            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li class="active">@Html.ActionLink("Anasayfa", "Index", "Home")</li>
                    @{
                        if (Session["YoneticiRolId"].ToString() == "1" || Session["YoneticiRolId"].ToString() == "2")
                        {
                            <li>@Html.ActionLink("Departman Listesi", "Index", "Departman")</li>
                            <li>@Html.ActionLink("Departman Ekle", "DepartmanEkle", "Departman")</li>
                        }
                        if (Session["YoneticiRolId"].ToString() != "4")
                        {
                            <li>@Html.ActionLink("Personel Listesi", "Index", "Personel")</li>
                            <li>@Html.ActionLink("Personel Ekle", "PersonelEkle", "Personel")</li>
                        }
                        <li>@Html.ActionLink("İş Listesi", "Index", "Is")</li>
                        if (Session["YoneticiRolId"].ToString() != "4")
                        {
                            <li>@Html.ActionLink("İş Ekle", "IsEkle", "Is")</li>
                        }
                        <li>@Html.ActionLink("İzinler", "Index", "Izin")</li>
                        <li>@Html.ActionLink("İzin Ekle", "IzinEkle", "Izin")</li>
                    }
                </ul>

            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

                @RenderSection("Content")
            </div>
        </div>
    </div>





    @Scripts.Render("~/Genel/Js")
</body>
</html>
